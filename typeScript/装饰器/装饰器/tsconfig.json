{
  "compilerOptions": {
    "target": "ES5",
    // 若要使用装饰器就设为 true
    "experimentalDecorators": true,
    // 如果你在浏览器中看到解析错误，请设置为 true
    "useDefineForClassFields": true,
    // 使用元数据时设置为true
    "emitDecoratorMetadata": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true
  },
  "include": ["src"]
}
